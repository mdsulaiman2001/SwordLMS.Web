@using System.Security.Claims;
@*@model SwordLMS.Web.Models.Role;*@


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwordLMS.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SwordLMS.Web.styles.css" asp-append-version="true" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   @* <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>*@


    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    @*<link rel="stylesheet" href="/resources/demos/style.css">*@
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>


    @await RenderSectionAsync("Scripts", required: false)

</head>
<body>
    <div class="layout-set">
      

        @if (User?.Identity?.IsAuthenticated == true)
        {

            if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "Admin")
            {
          
                <nav class="navbar navbar-expand-lg" style="background-color: rgb(28, 171, 226)">
                  

                        @*<a class="navbar-brand" href="#">
                            <img src="img1.png">
                            </a>*@

                        <a class="navbar-brand" asp-controller="" asp-action="" style="color:BLACK">Home</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories</a></li>
                                        <li><a class="dropdown-item" asp-controller="SubCategories" asp-action="Index">Sub Categories</a></li>
                                        <li><a class="dropdown-item" asp-controller="Skills" asp-action="Index">Skills</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <a class="navbar-brand" asp-controller="User" asp-action="Logout" style="color:Black">Sign Out</a>
                    
                </nav>


            }

            else if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "Author")
            {
                
                <nav class="navbar navbar-expand-lg" style="background-color: rgb(28, 171, 226)">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-controller="" asp-action="" style="color:BLACK">Author</a>

                       <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
        
                </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
              
                
                      <a class="navbar-brand" asp-controller="Course" asp-action="Create" style="color:BLACK">Create Course</a>

                                </li>
                            </ul>
                      <a class="navbar-brand" asp-controller="User" asp-action="Logout" style="color:Black">Sign Out</a>
                    
                </div>

                    </div>
                </nav>
            }
            else
            {

               
                <nav class="navbar navbar-expand-lg" style="background-color: rgb(28, 171, 226)">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-controller="" asp-action="" style="color:BLACK">Student</a>

                        @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>*@
                        <div class="XYX" style="margin-right: 1494px;">
                    <a class="navbar-brand" asp-controller="course" asp-action="StudentPage" style="color:Black">Courses</a>
                        </div>

                        <a class="navbar-brand" asp-controller="User" asp-action="Logout" style="color:Black">Sign Out</a>
                    
            </div>
                </nav>
                
          }
          
       }


        <div>
            <main role="main" class="pb-3" @*style="margin-left:40px;"*@>
                @RenderBody()
            </main>
        </div>

    </div>


</body>
</html>
