                                    </ul>
                        <a class="navbar-brand" asp-controller="" asp-action="">Sign Out</a>

                                </div>
                            </div>
                        </nav>


                    }

                    else if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "Author")
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Privacy</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Author</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Home</a>
