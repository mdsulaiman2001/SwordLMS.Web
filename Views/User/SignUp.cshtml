                <div>
                <label class="control-label">Are you Author</label>
                </div>
                <div class="col-md-10">
                    <label class="checkbox-inline">
                        @Html.CheckBox("RoleId",true)
                        Yes
                    </label>
                    <label class="checkbox-inline">
                        @Html.CheckBox("RoleId",false)
                        No
                    </label>
                </div>
            </div>*@


            <div class="from-group">
               <label class="control-label">Are You Author</label>
                <input type="RoleId" type="checkbox" id="cBoxx"> </input> 
            </div>

            @*<div class="from-group">
                <asp:CheckBox runat="server" Checked="true" ID="checkboxRules"/>
            </div>*@
            

            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () 

    {
        const alertStatus =(e) =>{
            if ($('#cBoxx')).is(":checked")) {
        alert("Is checked");
    } else {
        alert("Is not checked");
    }
    };
        }

        $('#ddlCountry').change(function () {
            $.ajax({
         
                type: "post",
                url: "/User/GetStates",
                data: { Id: $('#ddlCountry').val() },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    var State = "<select id='ddlState' onchange='LoadCities();'> ";
                    State = State + '<option value="">--Select--</option>';
                    for (var i = 0; i < data.length; i++) {
                        State = State + '<option value=' + data[i].id + '>' + data[i].name + '</option>';
                    }
                    State = State + '</select>';
                    $('#divState').html(State);

                }
            });
        });

        $("#ddlState").bind("change", LoadCities());
            function LoadCities() {
     
                 $.ajax({
                  
                type: "post",
                url: "/User/GetCities",
                data: { Id: $('#ddlState').val() },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    var City = "<select id='ddlCity' '>";
                    City = City + '<option value="">--Select--</option>';
                    for (var i = 0; i < data.length; i++) {
                        City = City + '<option value=' + data[i].id + '>' + data[i].name + '</option>';
                    }
                    City = City + '</select>';
                    $('#divCity').html(City);
                }

            });
            
        }
        

        $('#ddlState').change(function () {
            $.ajax({
                type: "post",
                url: "/User/GetCities",
                data: { Id: $('#ddlState').val() },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    var City = "<select id='ddlCity'>";
                    City = City + '<option value="">--Select--</option>';
                    for (var i = 0; i < data.length; i++) {
                        City = City + '<option value=' + data[i].id + '>' + data[i].name + '</option>';
                    }
                    City = City + '</select>';
                    $('#divCity').html(City);
                }

            });
        });
    });


</script>