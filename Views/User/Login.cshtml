@model SwordLMS.Web.Models.User


@{
    ViewData["Title"] = "Login Page";
}
<div class="col-md-4">
    <form asp-action="SaveLogin">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div class="form-group">

            <label asp-for="Country" class="control-label"></label>
            <select asp-for="Country" class="from-control" asp-items="new SelectList(ViewBag.roles)"></select>
        </div>

        <div class="form-group">
            @*   <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-dark"></span>*@
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "username"})
        </div>
        <div class="form-group">
            @* <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-dark"></span>*@
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "password"})
        </div>
        @*  <div class="form_group">
        <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
        <div class="e-input-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input class="e-input" type="password" placeholder="Password" value="password">
        </div>*@



        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-danger" />
        </div>


    </form>

</div>




