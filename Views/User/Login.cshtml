@model SwordLMS.Web.Models.User


@{
    ViewData["Title"] = "Login Page";
}
   


<div class="col-md-4">
    <form asp-action="DoLogin">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h1>Sign Up</h1>
    <div >
            @if(TempData["LoginErr"]!=null)
            {
                @TempData["LoginErr"]
            }
        </div>

        <div class="form-group">
            @*   <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-dark"></span>*@
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "username"})
        </div>
        <div class="form-group">
            @* <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-dark"></span>*@
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "password"})
        </div>
      

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-danger" />
        </div>


    </form>

</div>




