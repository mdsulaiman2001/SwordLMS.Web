@model SwordLMS.Web.Models.ForgetPasswordModelView



<div class="row" style="margin-left:35px;">
    <div class="col-md-4">
        <form asp-action="DoForgetPassword">
            <h4>Forget Password? Enter Registerd Emaill Address</h4>  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>

            <p class="mb-0">Back to login <a asp-action="Login" class="text-white-50 fw-bold" style="color:#212529!important">Login</a></p>
        </form>
    </div>
</div>